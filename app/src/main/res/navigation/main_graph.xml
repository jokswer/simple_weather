<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/tabsFragment">

    <fragment
        android:id="@+id/tabsFragment"
        android:name="ru.akbirov.weather.app.screens.main.tabs.TabsFragment"
        android:label="fragment_tabs"
        tools:layout="@layout/fragment_tabs" >
        <action
            android:id="@+id/action_tabsFragment_to_detailsFragment2"
            app:destination="@id/detailsFragment2" />
        <action
            android:id="@+id/action_tabsFragment_to_locationFragment3"
            app:destination="@id/locationFragment3" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment2"
        android:name="ru.akbirov.weather.app.screens.main.tabs.dashboard.DetailsFragment"
        android:label="DetailsFragment" />
    <fragment
        android:id="@+id/locationFragment3"
        android:name="ru.akbirov.weather.app.screens.main.tabs.settings.LocationFragment"
        android:label="fragment_location"
        tools:layout="@layout/fragment_location" />
</navigation>